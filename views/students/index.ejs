<!DOCTYPE html>
<html>
  <head>
    <title>Students</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Students</h1>
    <% if (students.length) { %>
      <table>
        <tr>
          <th>Name</th>
          <th>Phone Number</th>
        </tr>
        <% for (var i = 0; i < students.length; i++) { %>
          <tr>
            <td><a href="students/<%= students[i]._id %>"><%= students[i].name %></a></td>
            <td><%= students[i].number %></td>
          </tr>
        <% } %>
      </table>
    <% } %>
    <p><a href="/students/new">Add a Student</a></p>
    <p><a href="/">Home Page</a></p>
  </body>
</html>
